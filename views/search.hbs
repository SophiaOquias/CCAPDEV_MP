<link rel="stylesheet" href="/css/viewstyle.css">

<section>

    <span id="entry">Entries</span>
    <div id="entrysect">
        {{#each expenses}}
        <div class="entry" onclick="location.href='/view/entry?id={{_id}}';">
            <span class="description">{{this.description}}</span>
            <span class="entryType">{{this.entryType}}</span>
            <br>
            <span class="amount">{{currency this.amount}}</span>
            <span class="date">{{this.date}}</span>
        </div>
        {{/each}}
    </div>

</section>