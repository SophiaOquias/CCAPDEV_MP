<link rel="stylesheet" href="css/homestyle.css">
<script src="scripts/indexscript.js"></script>

<section>
    <div id="topsection">
        <div id="balance" class="quickinfo">
            <h1>Balance</h1>
            <h1><span id="balamount"></span></h1>
            <span class="typelabel">Total Expenses</span>
            <span id="totalExpenses" class="amount"></span>
            <br>
            <span class="typelabel">Total Income</span>
            <span id="totalIncome" class="amount"></span>
            <br>
            <span class="typelabel">Total Savings</span>
            <span id="totalSavings" class="amount"></span>
        </div>

        <div id="budget" class="quickinfo">
            <h2>Budget</h2>
            <h1><span id="budgetamount">{{currency budgetGoal}}</span></h1>
            <a id="editbudget" class="edit">edit</a>
        </div>

        <div id="savingsgoal" class="quickinfo">
            <h2>Savings Goal</h2>
            <h1><span id="sgoalamount">{{currency savingsGoal}}</span></h1>
            <a id="editsavgoal" class="edit">edit</a>
        </div>
    </div>

    <div id="searchbar">
        <input id="search" placeholder="Search Entry">
    </div>

    <span id="entries">Entries</span>

    <div id="bottomsection">
        {{!-- This is where all entries will go --}}
        {{#each entry}}
            {{> entry this}}
        {{/each}}
    </div>
</section>